<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="80dp"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/character_list_gender"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginVertical="5dp"
        android:layout_weight="2"
        android:src="@drawable/genderless_icon_color"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_weight="8"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:id="@+id/character_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/largeText"
            android:text="Full name"
            />
        <TextView
            android:id="@+id/character_list_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/character_list_name"
            android:textSize="@dimen/normalText"
            android:text="Character details"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/character_list_delete"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="2"
        android:textSize="40dp"
        android:gravity="center"
        android:text="P"
        />

</LinearLayout>